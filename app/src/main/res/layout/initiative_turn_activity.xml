<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/initiative_turn_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".features.initiative_turn.InitiativeTurnActivity">

    <include layout="@layout/toolbar" />

    <include layout="@layout/content_main" />

    <fragment android:name="com.pexegouva.pathfinder_companion.features.initiative_turn.NewParticipantFragment"
        android:id="@+id/new_participant"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:layout_gravity="center" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        app:backgroundTint="@color/colorAccent"
        app:srcCompat="@drawable/ic_add_participant" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>